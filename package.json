{
  "name": "monarch-db",
  "version": "1.0.0",
  "description": "ðŸš€ High-performance, zero-dependency in-memory database for JavaScript/TypeScript - Drop-in replacement for Redis + MongoDB",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "tsx --watch src/benchmark.ts",
    "test": "vitest",
    "test:unit": "vitest run test/unit/",
    "test:integration": "vitest run test/integration/",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest --watch",
    "benchmark": "tsx src/benchmark.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage *.tsbuildinfo",
    "docs": "typedoc --out docs/api src/index.ts",
    "docs:serve": "typedoc --out docs/api --serve src/index.ts",
    "prepublishOnly": "npm run clean && npm run build && npm run test:coverage",
    "prepare": "husky install",
    "start": "node dist/server.js",
    "server": "npm run build && npm run start",
    "test:performance": "node tests/performance/load-test.ts",
    "analyze:bundle": "vite-bundle-visualizer",
    "size:check": "bundlesize",
    "cli": "tsx src/cli/index.ts",
    "cli:build": "npm run build && npm run cli",
    "migrate:redis": "tsx migration-tools/redis-migration.ts",
    "migrate:mongodb": "tsx migration-tools/mongodb-migration.ts"
  },
  "bin": {
    "monarch": "./dist/cli/index.js"
  },
  "keywords": [
    "database",
    "in-memory",
    "javascript",
    "typescript",
    "nodejs",
    "browser",
    "fast",
    "zero-dependency",
    "redis",
    "mongodb",
    "nosql",
    "embedded",
    "key-value",
    "document-db",
    "vector-search",
    "ai",
    "ml",
    "clustering",
    "high-performance",
    "real-time",
    "json",
    "data-structures",
    "persistence",
    "enterprise"
  ],
  "author": "Monarch Database Team <hello@monarchdb.dev>",
  "contributors": [
    "Bantoinese83 (https://github.com/bantoinese83)"
  ],
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/bantoinese83"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bantoinese83/Monarch-Database.git"
  },
  "bugs": {
    "url": "https://github.com/bantoinese83/Monarch-Database/issues"
  },
  "homepage": "https://github.com/bantoinese83/Monarch-Database#readme",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "prettier": "^3.0.0",
    "tsx": "^4.20.6",
    "typedoc": "^0.28.14",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^3.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "knip": {
    "ignore": [
      "examples/**/*.ts",
      "benchmarks/**/*.js",
      "src/server.ts"
    ],
    "ignoreDependencies": [
      "ajv"
    ],
    "ignoreExportsUsedInFile": true,
    "include": [
      "src/index.ts"
    ],
    "workspaces": {
      ".": {
        "entry": [
          "src/index.ts"
        ],
        "project": [
          "src/**/*.ts",
          "test/**/*.ts"
        ]
      }
    }
  },
  "browserslist": [
    "last 2 versions",
    "not ie <= 11"
  ]
}
